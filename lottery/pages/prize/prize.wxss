/* pages/prize/prize.wxss */	
.prize-container{	
    width: 100vw;	
    height: 100vh;	
    box-sizing: content	
}	
.bg-view {	
    width: 100vw;	
    height: 100vh;	
    position: absolute;	
    top: 0;	
    z-index: -1	
}	
.page-bg-image {	
    width: 100vw;	
    height: 100vh;	
}	
.prize-image-view {	
    padding-top: 13vh;	
    text-align: center;	
}	
.prize1-image {	
    width:80px;
    height:153px;
}	
.prize2-image {	
    margin-top: 3vh;	
    width:74px;
    height:152px;
}	
.prize3-image {	
    margin-top: 13vh;	
    width: 120px;	
    height: 60px;	
}	
.prize-title-text {	
    font-size: 16px;	
    color: #fff;	
    text-align: center;	
    display: block;	
    margin: 20px auto 0;	
    width: 60vw; 	
    text-align: center;	
}
.tips-view {
    line-height: 18px;
}	
.tips {	
    margin-top: 20px;	
    display: block;	
    padding: 0 10vw;	
    font-size: 14px;	
    color: #fff;	
}	
.tips-text {	
    font-size: 12px;	
    color: #fff;
    line-height: 18px;	
    text-indent: 26px;
}
.tips-scroll {
    width: 80vw;
    margin: 10px 10vw;
    height: 22vh;
}	
.index-btns-box{	
  position:absolute;	
  left:0px;	
  width:100vw;	
  height:44px;	
  display:flex;	
  justify-content:space-around;	
  bottom:10px;	
}	
.index-btn{	
  width:30vw;	
  height:11vw;	
  padding-left: 0px;	
  padding-right: 0px;	
  background-color:unset;	
 }	
.index-btn-bg{	
  width:30vw;	
  height:11vw;	
} 
.view-wrapper{
  margin-top: -10px;
  box-sizing: border-box;
}