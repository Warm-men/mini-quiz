.result-view {
    overflow: hidden;
    position: relative;
    box-sizing: content;
}
.result-image{
    position: absolute;
    width: 100vw;
    height: 176vh;
    z-index: -1;
}
.image-view { 
    width: 100vw;
    height: 176vh;
}
.recore-view {
    padding-top: 20vh;
    margin:0 auto;
    width: 34vw;
    height: 30vh;
}
.recore-text {
    font-size: 28px;
    font-weight: 600;
    color: #fff;
    display: block;
    text-align: center
}
.description {
    font-size: 18px;
    font-weight: 500;
    color: #fff;
    display: block;
    text-align: center
}
.description-sub {
    margin-top: 5px;
    font-size: 14px;
    font-weight: 400;
    color: #fff;
    display: block;
    text-align: center
}
.doll-image {
    margin: 60px auto 0;
    width:30vw;
    display:block;
    height:27vh;
}
button::after {
  border: none;
}
.index-btns-box{
  margin-top: 25px;
  width:100vw;
  height:44px;
  display:flex;
  justify-content:space-around;
}
.index-btn{
  width:30vw;
  height:12vw;
  padding-left: 0px;
  padding-right: 0px;
  background-color:unset;
}
.index-btn-bg{
  width:30vw;
  height:12vw;
}
.scroll-view{
    width: 75vw;
    height: 50vh;
    margin: 35px auto 0;
    border: 4px solid #3a8ff1;
    background-color: rgba(101,179,241, 0.75);
    border-radius: 4px;
}
.scroll-title-view{
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 15px  0;
}
.line{
    width: 15px;
    height: 2px;
    background-color: #fff;
}
.scroll-title-text {
    font-size: 14px;
    color: #fff;
    font-weight: 500;
    margin: 0 12px;
}
.get-prize-view {
    position: fixed;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0,0,0, 0.35);
    top: 0;
    left: 0;
    display: flex;
    justify-center: center;
    align-items: center;
}
.get-prize-wrapper{
    width: 75vw;
    margin: 35px auto 0;
    border: 4px solid #3a8ff1;
    background-color: rgba(103,179,241, 0.95);
    border-radius: 4px;
}
.tip-view {
    border-top: 1px solid #fff;
    line-height: 15px;
    margin: 15px; 
    padding-top: 10px;
}
.tip-text {
    color: #fff;
    font-size: 13px;
    
}
.prize-title-text {
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    display: block
}
.prize-id-text {
    color: #fff;
    font-size: 24px;
    font-weight: 600;
    text-align: center;
    display: block;
    margin-top: 10px;
    letter-spacing: 1px;
}
.prize-id-view {
    line-height: 20px;
}
.pop-btns-box{
  margin-top: 25px;
  height:44px;
  display:flex;
  justify-content:space-around;
}
.pop-btn{
  width:20vw;
  height:9vw;
  padding-left: 0px;
  padding-right: 0px;
  background-color:unset;
}
.pop-btn-bg{
  width:20vw;
  height:9vw;
}